<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:popupBackground="@android:color/holo_orange_light"
        android:background="@android:color/holo_orange_light"
        android:layout_gravity="center_vertical|center_horizontal"/>

    <RelativeLayout
        android:id="@+id/layout_transport"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginEnd="@dimen/margin_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@android:color/holo_orange_light">

        <TextView
            android:id="@+id/tv1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_size_max_x"
            android:text="@string/mode"
            android:textColor="@android:color/black">
        </TextView>

        <TextView
            android:id="@+id/tv_car"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_max"
            android:text="@string/tv_car"
            android:textColor="@android:color/black">
        </TextView>

        <TextView
            android:id="@+id/tv_train"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_car"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_max"
            android:text="@string/tv_train"
            android:textColor="@android:color/black">
        </TextView>

    </RelativeLayout>

    <Button android:id="@+id/btn_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_transport"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_centerInParent="true"
        android:text="@string/nav"
        android:textSize="@dimen/text_size_max"
        android:textAllCaps="false"
        android:onClick="onNavigate">
    </Button>

</RelativeLayout>

